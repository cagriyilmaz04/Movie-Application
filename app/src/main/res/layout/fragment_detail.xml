<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#131F47"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DetailFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_detail_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="318dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toTopOf="@+id/text_released_title_detail_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="408dp"
            android:layout_height="232dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_detail_fragment"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView_type"
            android:layout_width="157dp"
            android:layout_height="184dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView_detail_fragment_title"
            android:layout_width="207dp"
            android:layout_height="39dp"
            android:gravity="start"
            android:text="@string/title_text_detail"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/text_released_title_detail_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_type"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/text_released_title_detail_fragment"
            android:layout_width="194dp"
            android:layout_height="0dp"
            android:layout_marginBottom="395dp"
            android:gravity="center"
            android:text="@string/released_time_text_detail_fragment"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_type"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_detail_fragment" />

        <TextView
            android:id="@+id/text_imdb_detail_fragment"
            android:layout_width="101dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/imdb"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_type"
            app:layout_constraintTop_toBottomOf="@+id/text_released_title_detail_fragment"
            app:layout_constraintVertical_bias="0.02" />

        <TextView
            android:id="@+id/textView_detail_overview"
            android:layout_width="209dp"
            android:layout_height="23dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/overview"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.133"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_type" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="399dp"
            android:layout_height="249dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView_text_overview_detail_fragment"
                android:layout_width="399dp"
                android:layout_height="246dp"
                android:gravity="start"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>